/* pages/index/index.wxss */
page{
  height: 100%;
}

.custom-item{
  width: 100%;
}

.custom-item div{
  text-align: center;
  width: 25%;
  float: left;
  margin-top: 10px;
  border-bottom: 1px solid grey;
}

.custom-item div image{
  height: 50px;
  width: 50px;
}

.news-list{
  height: 100%;
}

.news-list .news-item{
  width: 100%;
  height: 40px;
}

.list-component{
  height: 100%;
  text-align: center;
  margin-top: 20px;
}

.list-component .news-list{
  width: 100%;
  height: 100%;
}

.list-component .news-list .news-item{
  height: 100px;
  background-color: grey;
  margin-bottom: 10px;
}